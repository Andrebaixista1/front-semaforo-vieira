{
  "version": 2,
  "builds": [
    {
      "src": "api/[...proxy].js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "env": {
    "REACT_APP_API_BASE_URL": "/api",
    "UPSTREAM_API_BASE": "https://ubuntu.sistemavieira.com.br:8003"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...proxy].js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
